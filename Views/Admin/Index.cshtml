@{
    ViewData["Title"] = "Admin";
}

<div class="padding-top-120px bg-dark"></div>

<div class="site-section bg-light padding-top-120px">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-7 text-center mb-5">
                <h1>@Localizer["Admin Panel"]</h1>
            </div>
        </div>
        <div class="row justify-content-center text-center mb-5 mt-5">
            <div class="col-7 text-center mb-5">
                <h2>@Localizer["User Management Panel"]</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 mb-lg-5">
                <a asp-controller="User" asp-action="List">
                    <div class="testimonial-2">
                        <div class="d-flex v-card align-items-center">
                            <span>@Localizer["List users"]</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="row justify-content-center text-center mb-3 mt-5">
            <div class="col-7 text-center mb-5">
                <h2>@Localizer["Car Management Panel"]</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 mb-lg-5">
                <a asp-controller="Car" asp-action="ListAdmin">
                    <div class="testimonial-2">
                        <div class="d-flex v-card align-items-center">
                            <span>@Localizer["Car operations"]</span>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-6 mb-lg-5">
                <a asp-controller="Engine" asp-action="Index">
                    <div class="testimonial-2">
                        <div class="d-flex v-card align-items-center">
                            <span>@Localizer["Engine operations"]</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="row justify-content-center text-center mb-3 mt-5">
            <div class="col-7 text-center mb-5">
                <h2>@Localizer["Office Management Panel"]</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 mb-lg-5">
                <a asp-controller="Office" asp-action="ListAdmin">
                    <div class="testimonial-2">
                        <div class="d-flex v-card align-items-center">
                            <span>@Localizer["Office operations"]</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="row justify-content-center text-center mb-3 mt-5">
            <div class="col-7 text-center mb-5">
                <h2>@Localizer["Address Management Panel"]</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 mb-lg-5">
                <a asp-controller="Address" asp-action="Index">
                    <div class="testimonial-2">
                        <div class="d-flex v-card align-items-center">
                            <span>@Localizer["Address operations"]</span>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-3 mb-lg-5">
                <a asp-controller="District" asp-action="Index">
                    <div class="testimonial-2">
                        <div class="d-flex v-card align-items-center">
                            <span>@Localizer["District operations"]</span>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-3 mb-lg-5">
                <a asp-controller="Province" asp-action="Index">
                    <div class="testimonial-2">
                        <div class="d-flex v-card align-items-center">
                            <span>@Localizer["Province operations"]</span>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-3 mb-lg-5">
                <a asp-controller="Country" asp-action="Index">
                    <div class="testimonial-2">
                        <div class="d-flex v-card align-items-center">
                            <span>@Localizer["Country operations"]</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="row justify-content-center text-center mb-3 mt-5">
            <div class="col-7 text-center mb-5">
                <h2>@Localizer["Reservation Management Panel"]</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 mb-lg-5">
                <a asp-controller="Reservation" asp-action="LastActiveReservations">
                    <div class="testimonial-2">
                        <div class="d-flex v-card align-items-center">
                            <span>@Localizer["Last Active Reservations"]</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>