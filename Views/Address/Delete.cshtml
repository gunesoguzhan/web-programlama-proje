@model CarRent.Models.Address

@{
    ViewData["Title"] = Localizer["Delete The Address"];
}

<div class="padding-top-120px bg-dark"></div>

<div class="site-section bg-light padding-top-120px">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>@Localizer["Delete"] @Model.AddressTitle</h2>
                <h3>@Localizer["Are you sure you want to delete this?"]</h3>
            </div>
        </div>
        <div class="d-flex action mb-5">
            <a asp-action="Index" class="btn btn-primary">@Localizer["Go back to list"]</a>
        </div>
        <div class="col-lg-12 col-md-12 mb-4">
            <div class="item-1">
                <div class="item-1-contents">
                    <div class="text-center">
                        <h3>@Model.AddressTitle</h3>
                    </div>
                    <ul class="specs">
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.AddressId)</span>
                            <span class="spec spec2">@Model.AddressId</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.AddressText)</span>
                            <span class="spec spec2">@Model.AddressText</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.District.DistrictName)</span>
                            <span class="spec spec2">@Model.District.DistrictName</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.District.Province.ProvinceName)</span>
                            <span class="spec spec2">@Model.District.Province.ProvinceName</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.District.Province.Country.CountryName)</span>
                            <span class="spec spec2">@Model.District.Province.Country.CountryName</span>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="AddressId" />
            <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
        </form>
    </div>
</div>
