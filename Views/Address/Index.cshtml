@model IEnumerable<CarRent.Models.Address>

@{
    ViewData["Title"] = "List All Addresses";
}

<div class="padding-top-120px bg-dark"></div>

<div class="site-section bg-light padding-top-120px">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>List All Addresses</h2>
            </div>
        </div>
        <div class="d-flex action mb-5">
            <a asp-action="Create" class="btn btn-primary">Add new address</a>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="item-1">
                        <div class="item-1-contents">
                            <div class="text-center">
                                <h3>@item.AddressTitle</h3>
                            </div>
                            <ul class="specs">
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.AddressId)</span>
                                    <span class="spec spec2">@item.AddressId</span>
                                </li>
                                <li>
                                    <span class="spec2">Address</span>
                                    <span class="spec spec2">@item.AddressText</span>
                                </li>
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.District.DistrictName)</span>
                                    <span class="spec spec2">@item.District.DistrictName</span>
                                </li>
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.District.Province.ProvinceName)</span>
                                    <span class="spec spec2">@item.District.Province.ProvinceName</span>
                                </li>
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.District.Province.Country.CountryName)</span>
                                    <span class="spec spec2">@item.District.Province.Country.CountryName</span>
                                </li>
                            </ul>
                            <div class="d-flex action">
                                <a asp-action="Edit" asp-route-id="@item.AddressId" class="btn btn-primary mr-2">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.AddressId" class="btn btn-primary">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
