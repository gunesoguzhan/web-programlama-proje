@model IEnumerable<CarRent.Models.Office>

@{
    ViewData["Title"] = "List All Offices";
}

<div class="padding-top-120px bg-dark"></div>

<div class="site-section bg-light padding-top-120px">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>List All Offices</h2>
            </div>
        </div>
        <div class="d-flex action mb-5">
            <a asp-action="Create" class="btn btn-primary">Add new office</a>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="item-1">
                        <div class="item-1-contents">
                            <div class="text-center">
                                <h3>@item.OfficeName</h3>
                            </div>
                            <ul class="specs">
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.OfficeId)</span>
                                    <span class="spec spec2">@item.OfficeId</span>
                                </li>
                                <li>
                                    <span class="spec2">Address</span>
                                    <span class="spec spec2">@item.Address.AddressText</span>
                                </li>
                                <li>
                                    <span class="spec2">Phone</span>
                                    <span class="spec spec2">@item.OfficePhone</span>
                                </li>
                                <li>
                                    <span class="spec2">E-mail</span>
                                    <span class="spec spec2">@item.OfficeEmailAddress</span>
                                </li>
                            </ul>
                            <div class="d-flex action">
                                <a asp-action="Edit" asp-route-id="@item.OfficeId" class="btn btn-primary mr-2">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.OfficeId" class="btn btn-primary">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
