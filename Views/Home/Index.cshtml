@model IEnumerable<CarRent.Models.Car>;

@{
    ViewData["Title"] = "Welcome";
}

<div class="ftco-blocks-cover-1" >
    <div class="ftco-cover-1" style="background-image: url(@Url.Content(Model.First().CarCoverImageUrl));">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5">
                    <div class="feature-car-rent-box-1">
                        <h3>@Model.First().CarBrand @Model.First().CarModel</h3>
                        <ul class="list-unstyled">
                            <li>
                                <span>Office</span>
                                <span class="spec">@Model.First().Office.Address.District.Province.ProvinceName - @Model.First().Office.Address.District.DistrictName</span>
                            </li>
                            <li>
                                <span>Engine</span>
                                <span class="spec">@Model.First().Engine.EngineHorsePower hp @Model.First().Engine.EngineVolume cm³</span>
                            </li>
                            <li>
                                <span>Fuel</span>
                                <span class="spec">@Model.First().Engine.EngineFuelType</span>
                            </li>
                            <li>
                                <span>Transmission</span>
                                <span class="spec">@Model.First().CarTransmissionType</span>
                            </li>
                            <li>
                                <span>Minium age</span>
                                <span class="spec">@Model.First().MinimumAge</span>
                            </li>
                        </ul>
                        <div class="d-flex align-items-center bg-light p-3">
                            <span>@Model.First().CarRentPrice₺/day</span>
                            <a asp-action="FastRent" asp-controller="RentDetails" asp-route-id="@Model.First().CarId" class="ml-auto btn btn-primary">Rent Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section pt-0 pb-0 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12">

                <form class="trip-form" method="post" asp-action="List" asp-controller="Car">
                    <div class="row align-items-center mb-4">
                        <div class="col-md-6">
                            <h3 class="m-0">Begin your trip here</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-3">
                            <label for="cf-1">Where you from</label>
                            <select type="text" id="cf-1" name="RentPlace" asp-items="ViewBag.ProvinceDistrict" class="form-control" required>
                                <option value="">Your pickup address</option>
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="cf-2">Where you go</label>
                            <select type="text" id="cf-2" name="ReturnPlace" class="form-control" asp-items="ViewBag.ProvinceDistrict" required>
                                <option value="">Your drop-off address</option>
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="cf-3">Journey date</label>
                            <input type="datetime-local" id="cf-3" name="RentDate" placeholder="Your pickup address" class="form-control px-3" required>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="cf-4">Return date</label>
                            <input type="datetime-local" id="cf-4" name="ReturnDate" placeholder="Your pickup address" class="form-control px-3" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <input type="submit" value="Begin Trip" class="btn btn-primary">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <h3>Our Offer</h3>
                <p class="mb-4">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Iure nesciunt nemo vel earum maxime neque!</p>
                <p>
                    <a href="#" class="btn btn-primary custom-prev">Previous</a>
                    <span class="mx-2">/</span>
                    <a href="#" class="btn btn-primary custom-next">Next</a>
                </p>
            </div>
            <div class="col-lg-9">
                <div class="nonloop-block-13 owl-carousel">
                    @foreach (var item in Model)
                    {
                        <div class="item-1">
                            <img src="@item.CarImageUrl" alt="Image" class="img-fluid bg-white">
                            <div class="item-1-contents">
                                <div class="text-center">
                                    <h3>@item.CarBrand @item.CarModel</h3>
                                    <div class="rent-price"><span>@item.CarRentPrice₺/</span>day</div>
                                </div>
                                <ul class="specs">
                                    <li>
                                        <span>Office</span>
                                        <span class="spec">@item.Office.Address.District.Province.ProvinceName - @item.Office.Address.District.DistrictName</span>
                                    </li>
                                    <li>
                                        <span>Engine</span>
                                        <span class="spec">@item.Engine.EngineHorsePower hp @item.Engine.EngineVolume cm³</span>
                                    </li>
                                    <li>
                                        <span>Fuel</span>
                                        <span class="spec">@item.Engine.EngineFuelType</span>
                                    </li>
                                    <li>
                                        <span>Transmission</span>
                                        <span class="spec">@item.CarTransmissionType</span>
                                    </li>
                                </ul>
                                <div class="d-flex action">
                                    <a asp-action="FastRent" asp-controller="RentDetails" asp-route-id="@item.CarId" class="btn btn-primary">Rent Now</a>
                                </div>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
</div>

