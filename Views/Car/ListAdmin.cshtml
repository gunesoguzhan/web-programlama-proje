@model IEnumerable<CarRent.Models.Car>

@{
    ViewData["Title"] = Localizer["List All Cars"];
}

<div class="padding-top-120px bg-dark" ></div>

<div class="site-section bg-light padding-top-120px">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>@ViewData["Title"]</h2>
            </div>
        </div>
        <div class="d-flex action mb-5">
            <a asp-action="Create" class="btn btn-primary">@Localizer["Add new car"]</a>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="item-1">
                        <img src="@item.CarImageUrl" alt="Car" class="img-fluid bg-white">
                        <div class="item-1-contents">
                            <div class="text-center">
                               <h3>@item.CarBrand @item.CarModel</h3>
                            </div>
                            <ul class="specs">
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.Office.OfficeName)</span>
                                    <span class="spec spec2">@item.Office.OfficeName</span>
                                </li>
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.CarId)</span>
                                    <span class="spec spec2">@item.CarId</span>
                                </li>
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.CarColor)</span>
                                    <span class="spec spec2">@item.CarColor</span>
                                </li>
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.CarKilometer)</span>
                                    <span class="spec spec2">@item.CarKilometer</span>
                                </li>
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.CarProductYear)</span>
                                    <span class="spec spec2">@item.CarProductYear</span>
                                </li>
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.CarRentPrice)</span>
                                    <span class="spec spec2">@item.CarRentPrice</span>
                                </li>
                            </ul>
                            <div class="d-flex action">
                                <a asp-action="DetailsAdmin" asp-route-id="@item.CarId" class="btn btn-primary mr-2">@Localizer["Details"]</a>
                                <a asp-action="Edit" asp-route-id="@item.CarId" class="btn btn-primary mr-2">@Localizer["Edit"]</a>
                                <a asp-action="Delete" asp-route-id="@item.CarId" class="btn btn-primary">@Localizer["Delete"]</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
