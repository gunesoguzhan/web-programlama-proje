@model IEnumerable<CarRent.Models.Car>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Our Cars For You";
    Reservation reservation = HttpContextAccessor.HttpContext.Session.GetObject<Reservation>("Reservation");
}

<div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1 overlay innerpage" style="background-image: url('/img/cars.jpg')">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-6 text-center">
                    <h1>Our Cars For You</h1>
                    <p>We list our suitable cars for you.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="item-1">
                        <img src="@item.CarImageUrl" alt="Image" class="img-fluid bg-white">
                        <div class="item-1-contents">
                            <div class="text-center">
                                <h3>@item.CarBrand @item.CarModel @item.CarTrimPackage</h3>
                                <div class="rent-price"><span>@(item.CarRentPrice * reservation.Days)₺</span> + @(item.CarDepositPrice)₺ deposit</div>
                            </div>
                            <ul class="specs">
                                <li>
                                    <span>Engine</span>
                                    <span class="spec">@item.Engine.EngineHorsePower hp @item.Engine.EngineVolume cm³</span>
                                </li>
                                <li>
                                    <span>Fuel</span>
                                    <span class="spec">@item.Engine.EngineFuelType</span>
                                </li>
                                <li>
                                    <span>Transmission</span>
                                    <span class="spec">@item.CarTransmissionType</span>
                                </li>
                                <li>
                                    <span>Minium age</span>
                                    <span class="spec">@item.MinimumAge</span>
                                </li>
                            </ul>
                            <div class="d-flex action">
                                <a asp-action="Reserve" asp-controller="Reservation" asp-route-id="@item.CarId" class="btn btn-primary">Rent Now</a>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>

<div class="container site-section mb-5">
    <div class="row justify-content-center text-center">
        <div class="col-7 text-center mb-5">
            <h2>How it works</h2>
            <p>Our car rental process is as shown below.</p>
        </div>
    </div>
    <div class="how-it-works d-flex">
        <div class="step">
            <span class="number"><span>01</span></span>
            <span class="caption">Time &amp; Place</span>
        </div>
        <div class="step">
            <span class="number current-number"><span>02</span></span>
            <span class="caption ">Car</span>
        </div>
        <div class="step">
            <span class="number"><span>03</span></span>
            <span class="caption">Details</span>
        </div>
        <div class="step">
            <span class="number"><span>04</span></span>
            <span class="caption">Checkout</span>
        </div>
        <div class="step">
            <span class="number"><span>05</span></span>
            <span class="caption">Done</span>
        </div>
    </div>
</div>