@model CarRent.Models.Car

@{
    ViewData["Title"] = Localizer["Car Details"];
}

<div class="padding-top-120px bg-dark"></div>

<div class="site-section bg-light padding-top-120px">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>@Model.CarBrand @Model.CarModel @Localizer["Details"]</h2>
            </div>
        </div>
        <div class="d-flex action mb-5">
            <a asp-action="ListAdmin" class="btn btn-primary">@Localizer["Go back to list"]</a>
        </div>
        <div class="col-lg-12 col-md-12 mb-4">
            <div class="item-1">
                <img src="@Model.CarImageUrl" alt="Car" class="img-fluid">
                <div class="item-1-contents">
                    <div class="text-center">
                        <h3>@Model.CarBrand @Model.CarModel</h3>
                    </div>
                    <ul class="specs">
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.Office.OfficeName)</span>
                            <span class="spec spec2">@Model.Office.OfficeName</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.CarId)</span>
                            <span class="spec spec2">@Model.CarId</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.CarType)</span>
                            <span class="spec spec2">@Model.CarType</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.Engine.EngineName)</span>
                            <span class="spec spec2">@Model.Engine.EngineName</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.Engine.EngineVolume)</span>
                            <span class="spec spec2">@Model.Engine.EngineVolume</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.Engine.EngineHorsePower)</span>
                            <span class="spec spec2">@Model.Engine.EngineHorsePower</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.Engine.EngineFuelType)</span>
                            <span class="spec spec2">@Html.DisplayFor(x => x.Engine.EngineFuelType)</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.CarTransmissionType)</span>
                            <span class="spec spec2">@Html.DisplayFor(x => x.CarTransmissionType)</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.CarTrimPackage)</span>
                            <span class="spec spec2">@Model.CarTrimPackage</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.CarColor)</span>
                            <span class="spec spec2">@Model.CarColor</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.CarKilometer)</span>
                            <span class="spec spec2">@Model.CarKilometer</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.CarProductYear)</span>
                            <span class="spec spec2">@Model.CarProductYear</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.CarRentPrice)</span>
                            <span class="spec spec2">@Model.CarRentPrice</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.CarDepositPrice)</span>
                            <span class="spec spec2">@Model.CarDepositPrice</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.MinimumAge)</span>
                            <span class="spec spec2">@Model.MinimumAge</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
