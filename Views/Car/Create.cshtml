@model CarRent.Models.Car

@{
    ViewData["Title"] = "Add A Car";
}

<div class="padding-top-120px bg-dark"></div>

<div class="site-section bg-light padding-top-120px" id="contact-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>Add A New Car</h2>
            </div>
        </div>
        <div class="d-flex action mb-5">
            <a asp-action="ListAdmin" class="btn btn-primary">Go back to list</a>
        </div>
        <div class="row">
            <div class="col-lg-8 mb-5">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-md-4 mb-4 mb-lg-0">
                            <label asp-for="CarBrand" class="control-label"></label>
                            <input asp-for="CarBrand" class="form-control" />
                            <span asp-validation-for="CarBrand" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="CarModel" class="control-label"></label>
                            <input asp-for="CarModel" class="form-control" />
                            <span asp-validation-for="CarModel" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="CarType" class="control-label"></label>
                            <select asp-for="CarType" class="form-control" asp-items="@Html.GetEnumSelectList<CarType>()"></select>
                            <span asp-validation-for="CarType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6 mb-4 mb-lg-0">
                            <label asp-for="CarTrimPackage" class="control-label"></label>
                            <input asp-for="CarTrimPackage" class="form-control" />
                            <span asp-validation-for="CarTrimPackage" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-4 mb-lg-0">
                            <label asp-for="CarColor" class="control-label"></label>
                            <input asp-for="CarColor" class="form-control" />
                            <span asp-validation-for="CarColor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6 mb-4 mb-lg-0">
                            <label asp-for="EngineId" class="control-label"></label>
                            <a asp-action="Create" asp-controller="Engine" class="btn btn-primary float-right">Add a new engine</a>
                            <select asp-for="EngineId" class="form-control" asp-items="ViewBag.EngineId"></select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="CarTransmissionType" class="control-label"></label>
                            <select asp-for="CarTransmissionType" class="form-control" asp-items="@Html.GetEnumSelectList<CarTransmissionType>()"></select>
                            <span asp-validation-for="CarTransmissionType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4 mb-4 mb-lg-0">
                            <label asp-for="CarKilometer" class="control-label"></label>
                            <input asp-for="CarKilometer" class="form-control" />
                            <span asp-validation-for="CarKilometer" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="CarProductYear" class="control-label"></label>
                            <input asp-for="CarProductYear" class="form-control" />
                            <span asp-validation-for="CarProductYear" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="MinimumAge" class="control-label"></label>
                            <input asp-for="MinimumAge" class="form-control" />
                            <span asp-validation-for="MinimumAge" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6 mb-4 mb-lg-0">
                            <label asp-for="CarRentPrice" class="control-label"></label>
                            <input asp-for="CarRentPrice" class="form-control" />
                            <span asp-validation-for="CarRentPrice" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="CarDepositPrice" class="control-label"></label>
                            <input asp-for="CarDepositPrice" class="form-control" />
                            <span asp-validation-for="CarDepositPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="OfficeId" class="control-label"></label>
                            <a asp-action="Create" asp-controller="Office" class="btn btn-primary float-right">Add a new office</a>
                            <select asp-for="OfficeId" class="form-control" asp-items="ViewBag.OfficeId"></select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="CarImageUrl" class="control-label"></label>
                            <input type="file" asp-for="CarImageUrl" class="form-control" name="files"/>
                            <span asp-validation-for="CarImageUrl" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="CarCoverImageUrl" class="control-label"></label>
                            <input type="file" asp-for="CarCoverImageUrl" class="form-control" name="files"/>
                            <span asp-validation-for="CarCoverImageUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6 mr-auto">
                            <input type="submit" class="btn btn-block btn-primary text-white py-3 px-5" value="Add">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
