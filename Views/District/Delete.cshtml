@model CarRent.Models.District

@{
    ViewData["Title"] = "Delete The District";
}

<div class="site-section bg-light padding-top-200px">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>Delete @Model.DistrictName</h2>
                <h3>Are you sure you want to delete this?</h3>
            </div>
        </div>
        <div class="d-flex action mb-5">
            <a asp-action="Index" class="btn btn-primary">Go back to list</a>
        </div>
        <div class="col-lg-12 col-md-12 mb-4">
            <div class="item-1">
                <div class="item-1-contents">
                    <div class="text-center">
                        <h3>@Model.DistrictName</h3>
                    </div>
                    <ul class="specs">
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.DistrictId)</span>
                            <span class="spec spec2">@Model.DistrictId</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.Province.ProvinceName)</span>
                            <span class="spec spec2">@Model.Province.ProvinceName</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.Province.Country.CountryName)</span>
                            <span class="spec spec2">@Model.Province.Country.CountryName</span>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="DistrictId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>
