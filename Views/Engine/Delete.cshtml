@model CarRent.Models.Engine

@{
    ViewData["Title"] = "Delete The Engine";
}

<div class="padding-top-120px bg-dark"></div>

<div class="site-section bg-light padding-top-120px">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>Delete @Model.EngineName</h2>
                <h3>Are you sure you want to delete this?</h3>
            </div>
        </div>
        <div class="d-flex action mb-5">
            <a asp-action="Index" class="btn btn-primary">Go back to list</a>
        </div>
        <div class="col-lg-12 col-md-12 mb-4">
            <div class="item-1">
                <div class="item-1-contents">
                    <div class="text-center">
                        <h3>@Model.EngineName</h3>
                    </div>
                    <ul class="specs">
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.EngineId)</span>
                            <span class="spec spec2">@Model.EngineId</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.EngineVolume)</span>
                            <span class="spec spec2">@Model.EngineVolume</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.EngineHorsePower)</span>
                            <span class="spec spec2">@Model.EngineHorsePower</span>
                        </li>
                        <li>
                            <span class="spec2">@Html.DisplayNameFor(model => model.EngineFuelType)</span>
                            <span class="spec spec2">@Model.EngineFuelType</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="EngineId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>
