@model IEnumerable<CarRent.Models.Engine>

@{
    ViewData["Title"] = Localizer["List All Engines"];
}

<div class="padding-top-120px bg-dark"></div>

<div class="site-section bg-light padding-top-120px">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>@ViewData["Title"]</h2>
            </div>
        </div>
        <div class="d-flex action mb-5">
            <a asp-action="Create" class="btn btn-primary">@Localizer["Add new engine"]</a>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="item-1">
                        <div class="item-1-contents">
                            <div class="text-center">
                                <h3>@item.EngineName</h3>
                            </div>
                            <ul class="specs">
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.EngineId)</span>
                                    <span class="spec spec2">@item.EngineId</span>
                                </li>
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.EngineVolume)</span>
                                    <span class="spec spec2">@item.EngineVolume</span>
                                </li>
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.EngineHorsePower)</span>
                                    <span class="spec spec2">@item.EngineHorsePower</span>
                                </li>
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.EngineFuelType)</span>
                                    <span class="spec spec2">@Html.DisplayFor(x => item.EngineFuelType)</span>
                                </li>
                            </ul>
                            <div class="d-flex action">
                                <a asp-action="Edit" asp-route-id="@item.EngineId" class="btn btn-primary mr-2">@Localizer["Edit"]</a>
                                <a asp-action="Delete" asp-route-id="@item.EngineId" class="btn btn-primary">@Localizer["Delete"]</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
