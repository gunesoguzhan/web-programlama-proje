@model IEnumerable<CarRent.Models.Country>

@{
    ViewData["Title"] = "List All Countries";
}

<div class="site-section bg-light padding-top-200px">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>List All Countries</h2>
            </div>
        </div>
        <div class="d-flex action mb-5">
            <a asp-action="Create" class="btn btn-primary">Add new country</a>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="item-1">
                        <div class="item-1-contents">
                            <div class="text-center">
                                <h3>@item.CountryName</h3>
                            </div>
                            <ul class="specs">
                                <li>
                                    <span class="spec2">@Html.DisplayNameFor(model => model.CountryId)</span>
                                    <span class="spec spec2">@item.CountryId</span>
                                </li>
                            </ul>
                            <div class="d-flex action">
                                <a asp-action="Edit" asp-route-id="@item.CountryId" class="btn btn-primary mr-2">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.CountryId" class="btn btn-primary">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="col-12">
                <span class="p-3">1</span>
                <a href="#" class="p-3">2</a>
                <a href="#" class="p-3">3</a>
                <a href="#" class="p-3">4</a>
            </div>
        </div>
    </div>
</div>
