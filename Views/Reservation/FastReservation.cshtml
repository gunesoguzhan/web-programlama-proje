@model CarRent.Models.Reservation

@{
    ViewData["Title"] = Localizer["Fast Reservation"];
}

<div class="padding-top-120px bg-dark"></div>

<div class="site-section bg-light padding-top-120px">
    <div class="container">
        <div class="row">
            <div class="offset-lg-3 col-lg-6 col-md-6 mb-4">
                <div class="item-1">
                    <img src="@Model.Car.CarImageUrl" alt="Image" class="img-fluid bg-white">
                    <div class="item-1-contents">
                        <div class="text-center">
                            <h3>@Model.Car.CarBrand @Model.Car.CarModel</h3>
                            <div class="rent-price"><span>@Model.Car.CarRentPrice₺/</span>@Localizer["day"] + @Model.Car.CarDepositPrice₺ @Localizer["deposit"]</div>
                        </div>
                        <ul class="specs">
                            <li>
                                <span>@Html.DisplayNameFor(x => x.Car.Office)</span>
                                <span class="spec">@Model.Car.Office.Address.District.Province.ProvinceName - @Model.Car.Office.Address.District.DistrictName</span>
                            </li>
                            <li>
                                <span>@Html.DisplayNameFor(x => x.Car.Engine)</span>
                                <span class="spec">@Model.Car.Engine.EngineHorsePower hp @Model.Car.Engine.EngineVolume cm³</span>
                            </li>
                            <li>
                                <span>@Html.DisplayNameFor(x => x.Car.Engine.EngineFuelType)</span>
                                <span class="spec">@Html.DisplayFor(x => x.Car.Engine.EngineFuelType)</span>
                            </li>
                            <li>
                                <span>@Html.DisplayNameFor(x => x.Car.CarTransmissionType)</span>
                                <span class="spec">@Html.DisplayFor(x => x.Car.CarTransmissionType)</span>
                            </li>
                            <li>
                                <span>@Html.DisplayNameFor(x => x.Car.CarTrimPackage)</span>
                                <span class="spec">@Model.Car.CarTrimPackage</span>
                            </li>
                            <li>
                                <span>@Html.DisplayNameFor(x => x.Car.MinimumAge)</span>
                                <span class="spec">@Model.Car.MinimumAge</span>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="site-section pb-6 pt-0 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12">

                <form class="trip-form" method="get" asp-action="FastReserve" asp-controller="Reservation">
                    <div class="row align-items-center mb-4">
                        <div class="col-md-6">
                            <h3 class="m-0">@Localizer["Begin your trip here"]</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label for="cf-2">@Localizer["Where you go"]</label>
                            <select type="text" id="cf-2" name="ReturnPlace" class="form-control" asp-items="ViewBag.ProvinceDistrict" required>
                                <option value="">@Localizer["Your drop-off address"]</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="cf-3">@Localizer["Journey date"]</label>
                            <input type="datetime-local" id="cf-3" name="RentDate" placeholder="Your pickup address" class="form-control px-3" required min="@DateTime.Now.AddMinutes(10).ToString("yyyy-MM-ddTHH:mm")">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="cf-4">@Localizer["Return date"]</label>
                            <input type="datetime-local" id="cf-4" name="ReturnDate" placeholder="Your pickup address" class="form-control px-3" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <input type="submit" value="@Localizer["Confirm"]" class="btn btn-primary">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<partial name="_HowItWorksPartial"/>