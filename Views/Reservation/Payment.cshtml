@{
    ViewData["Title"] = Localizer["Payment"];
}

<div class="padding-top-120px bg-dark"></div>

<div class="site-section bg-light padding-top-120px" id="contact-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>@ViewData["Title"]</h2>
                <h4>@Localizer["You can make your payment by clicking the button below."]</h4>
            </div>
        </div>
        <div class="d-flex action mb-5">
            <a asp-action="Pay" asp-controller="Reservation" class="btn btn-primary m-auto pt-3 pb-3 pl-5 pr-5">@Localizer["Pay"]</a>
        </div>
    </div>
</div>

<partial name="_HowItWorksPartial" />